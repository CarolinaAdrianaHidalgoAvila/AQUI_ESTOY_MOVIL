<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AQUI_ESTOY_light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/teal_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ambar_200</item>
        <item name="colorSecondaryVariant">@color/ambar_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorSecondaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>
</resources>