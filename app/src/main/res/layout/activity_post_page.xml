<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Post">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="357dp"
            android:layout_height="373dp"
            android:layout_margin="16dp"
            android:elevation="8dp"
            android:radius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- Parte superior del CardView con el avatar, nombre y botones -->
                <RelativeLayout
                    android:id="@+id/topLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:padding="16dp">

                    <!-- Avatar circular con imagen -->
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatarImageView"
                        android:layout_width="33dp"
                        android:layout_height="42dp"
                        android:src="@drawable/avatar" />

                    <!-- Nombre del usuario -->
                    <TextView
                        android:id="@+id/tv_nameuser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/avatarImageView"
                        android:text="Roberto Rocabado"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Botón de Me Encanta -->
                    <ImageButton
                        android:id="@+id/likeButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/tv_nameuser"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/love_button_description"
                        android:src="@drawable/love" />

                    <!-- Botón de Compartir -->
                    <ImageButton
                        android:id="@+id/shareButton"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:layout_toEndOf="@id/likeButton"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/share_button_description"
                        android:src="@drawable/share" />

                </RelativeLayout>

                <!-- Imagen principal del CardView -->

                <!-- Texto secundario del CardView -->

                <ImageView
                    android:id="@+id/mainImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/perro" />

                <TextView
                    android:id="@+id/tv_namePet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:padding="16dp"
                    android:text="Nombre Perro"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_datePublication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:padding="16dp"
                    android:text="Fecha post"
                    android:textSize="16sp" />
            </FrameLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="30dp"
            android:textSize="18sp"
            android:text="Recompensa Bs."
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView" />
        <TextView
            android:id="@+id/textReward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tReward" />

        <TextView
            android:id="@+id/tEspecie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:textSize="18sp"
            android:text="Especie"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textReward" />

        <TextView
            android:id="@+id/textEspecie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tEspecie" />


        <TextView
            android:id="@+id/tDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:textSize="18sp"
            android:text="Descripción"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textEspecie" />

        <TextView
            android:id="@+id/textDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tDescription" />

        <TextView
            android:id="@+id/tEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:textSize="18sp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textDescription" />

        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:text="Email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tEmail" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>